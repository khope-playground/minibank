<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date][%-5level][%thread] %logger{36} %message%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
